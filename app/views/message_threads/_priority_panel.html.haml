.priority-panel
  %h3= t ".thread_priority"
  - if signed_in?
    - if current_user.prioritised_thread?(@thread)
      = semantic_form_for @thread.priority_for(current_user), url: thread_user_priorities_path(@thread) do |f|
        = f.inputs do
          = f.input :priority, :as => :select, :collection => f.object.class.priorities_map
        = f.buttons do
          = f.commit_button
    - else
      = semantic_form_for UserThreadPriority.new, url: thread_user_priorities_path(@thread) do |f|
        = f.inputs do
          = f.input :priority, :as => :select, :collection => f.object.class.priorities_map
        = f.buttons do
          = f.commit_button
