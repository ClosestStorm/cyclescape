    #error_explanation
      %h2= "#{pluralize(@group_request.errors.count, "error")} prohibited this group_request from being saved:"
      %ul
        - @group_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :subdomain
    = f.text_field :subdomain
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
