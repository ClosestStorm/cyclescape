%article#content
  %section.top-box
    %h1= t ".introduction_html"
  %section.center-box
    %h2= t ".center_box_title"
    .inner
      %p= t ".center_box_html"
      = link_to t(".report_an_issue"), new_issue_path, class: "btn-big-green"
  %section
    %h2= t ".latest_discussions"
    %ul.latest-discussions
      %li.cycle-path
        %h4= link_to "Planning office discussions", ""
        %p Title of issue
        %a.btn-green Follow

%aside#sidebar
  %section.homepage-groups
    %h2= t ".groups_title"
    %p= t ".groups_intro_html"
  %section.twitter
    = render partial: "twitter"

