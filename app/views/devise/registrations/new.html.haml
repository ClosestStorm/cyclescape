.sign-up-form
  %h1= t ".title"
  = semantic_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
    = devise_error_messages!
    = f.inputs do
      = f.input :full_name
      = f.input :display_name
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
    = f.buttons do
      = f.commit_button
  = render :partial => "devise/shared/links"
