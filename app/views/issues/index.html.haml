%section.issues
  %header
    %h1= t ".title"
  .tasks
    = link_to t(".new_issue"), new_issue_path, class: "button"
  .search
    = render "search"
  = render "all_map"
  .recent
    %h2= t ".recent_issues"
    = render partial: "compact", collection: @issues, as: :issue, locals: {collapsed: true}
  .popular
    %h2= t ".popular_issues"
    = render partial: "compact", collection: @popular_issues, as: :issue, locals: {collapsed: true}
