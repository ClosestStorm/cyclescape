%article.issue
  %header
    %h2= @issue.title
  .main
    %section.details
      %ul
        %li= t ".added_by_html", name: link_to_profile(@issue.created_by), time: l(@issue.created_at.to_date)
    %section.tags
      = render partial: "issue/tags/panel", locals: {issue: @issue}
    %section.description
      = @issue.description
    %section.voting
      %ul
        %li
          = link_to t(".vote_up"), vote_up_issue_path(@issue), method: :put
          = " \u2714" if current_user && current_user.voted_for?(@issue)
        %li= @issue.plusminus
        %li
          = link_to t(".vote_down"), vote_down_issue_path(@issue), method: :put
          = " \u2714" if current_user && current_user.voted_against?(@issue)
  .additional
    %section.map
      = render partial: "map", locals: { issue: @issue }
  %section.threads
    = render partial: "message_threads/widget", collection: @threads, as: :thread
    %ul.horizontal
      - if permitted_to? :destroy, :issues
        %li= link_to t(".delete_issue"), issue_path(@issue), confirm: t(".confirm_delete"), method: :delete
      - if permitted_to? :create, :message_threads
        %li= link_to t(".new_public_thread"), new_issue_thread_path(@issue), class: "button", rel: "#overlay"
      - user_groups.each do |group|
        %li= link_to t(".new_group_thread", group: group.name), new_issue_thread_path(@issue, group_id: group), class: "button", rel: "#overlay"
