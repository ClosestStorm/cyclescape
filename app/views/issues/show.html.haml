%article.issue#content
  %header
    %h1= @issue.title
  .main
    %section.meta
      %p= t ".added_by_html", name: link_to_profile(@issue.created_by), time: l(@issue.created_at.to_date)
    %section.tags
      = render partial: "issue/tags/panel", locals: {issue: @issue}
    %section.description
      = simple_format @issue.description
    %section.voting
      %ul
        %li
          = link_to t(".vote_up"), vote_up_issue_path(@issue), method: :put
          = " \u2714" if current_user && current_user.voted_for?(@issue)
        %li= @issue.plusminus
        %li
          = link_to t(".vote_down"), vote_down_issue_path(@issue), method: :put
          = " \u2714" if current_user && current_user.voted_against?(@issue)
  %section.threads
    %header
      %h2= t ".threads"
      - if permitted_to? :create, :issue_message_threads
        %p= link_to t(".new_thread"), new_issue_thread_path(@issue), class: "button", rel: "#overlay"
    %ul.thread-list
      = render partial: "message_threads/compact", collection: @threads, as: :thread
    %ul.horizontal
      - if permitted_to? :destroy, :issues
        %li= link_to t(".delete_issue"), issue_path(@issue), confirm: t(".confirm_delete"), method: :delete

%aside#sidebar
  %section.map
    = render partial: "map", locals: { issue: @issue }
