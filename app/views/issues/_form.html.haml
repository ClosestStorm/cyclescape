= semantic_form_for @issue do |f|
  = f.inputs do
    = f.input :title
    = f.input :photo, as: :file
    = f.input :retained_photo, as: :hidden
    = f.input :tags_string, as: :tags
    = f.input :description
    = f.input :loc_json, as: :hidden
  = f.semantic_errors :location
  = render partial: "shared/edit_map", locals: {thing: @issue}
  = f.buttons

= render partial: "shared/map_search", locals: {map_id: "map"}
