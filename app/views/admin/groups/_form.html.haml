= semantic_form_for @group, url: [:admin, @group] do |f|
  = f.inputs do
    = f.input :name
    = f.input :short_name, input_html: { size: 30 }
    = f.input :website
    = f.input :email
    = f.input :default_thread_privacy, as: :select, collection: (MessageThread::ALLOWED_PRIVACY - ["committee"]).map {|n| [n.capitalize, n] }
  = f.actions do
    = f.action :submit, button_html: {class: "btn-green submit"}
    = cancel_link
