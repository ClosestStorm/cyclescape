.user-profile
  %h1= @user.name
  - if @user == current_user
    %ol
      %li= link_to t(".edit"), action: :edit
      %li= link_to t(".update_account"), edit_user_registration_path
      %li= link_to t(".my_locations"), user_locations_path
  .website
    = @profile.website
  - if @profile.picture
    = image_tag @profile.picture.url
  .about
    = @profile.about
