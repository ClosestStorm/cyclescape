.dashboard
  %h1== Hello #{@user.full_name}

%section.groups
  - @groups.each do |group|
    %section.group
      %h1= link_to group.name, group
      %p= link_to t(".new_group_thread"), new_group_thread_path(group)
      %ul
        - group.threads.each do |thread|
          %li= link_to thread.title, group_thread_path(group, thread)
