%h1= t ".title", :group => @group.name

%p= link_to t(".new_member"), new_group_membership_path

%h2= t ".committee"
%table
  %thead
    %th= t ".member_name"
    %th= t ".actions"
  %tbody
    - @committee.each do |member|
      %tr
        %td
          = link_to member.name, user_profile_path(member)
        %td
          = link_to t(".edit"), "#"
        %td= link_to t(".delete"), group_membership_path(@group, @group.membership_for(member)), confirm: t(".confirm"), method: :delete

%h2= t ".members"
%table
  %thead
    %th= t ".member_name"
    %th= t ".actions"
  %tbody
    - @members.each do |member|
      %tr
        %td
          = link_to member.name, user_profile_path(member)
        %td
          = link_to t(".edit"), "#"
        %td= link_to t(".delete"), group_membership_path(@group, @group.membership_for(member)), confirm: t(".confirm"), method: :delete
