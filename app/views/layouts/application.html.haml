!!!
%html
  %head
    %title= t ".title"
    = stylesheet_link_tag    "application"
    %script(src="/openlayers/OpenLayers.js" type="text/javascript")
    %script(src="http://cdn.jquerytools.org/1.2.6/jquery.tools.min.js" type="text/javascript")
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{class: controller_path.tr("/_", "-")}
    %header.top
      .inner
        = link_to image_tag("header_logo.png", alt: t(".title")), root_path
    %nav.bar
      .inner
        - if current_user
          .main-menu
            %ul
              %li= link_to t(".dashboard"), dashboard_path
              - if permitted_to? :view, :admin_home
                %li= link_to t(".admin"), admin_home_path
              %li= link_to t(".issues"), issues_path
              %li= link_to t(".threads"), threads_path
          .account-menu
            %ul
              %li.name= link_to_profile current_user
              %li.sign-out= link_to "Sign out", destroy_user_session_path, method: "delete"
        - else
          .public-menu
          .account-menu
            %ul
              %li= link_to "Sign up", new_user_registration_path
              %li= link_to "Sign in", new_user_session_path
    .flash-container
      - [:alert, :notice].each do |type|
        - if flash.key? type
          .flash{class: type}
            = flash[type]
    .content-container
      .content
        = yield
    %footer
