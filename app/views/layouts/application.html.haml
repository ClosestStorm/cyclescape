!!!
%html
  %head
    %title Cyclekit
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = javascript_include_tag "/openlayers/OpenLayers.js"
  %body
    %header
      %h1 CycleKit
    .control-bar
      - if current_user
        .account
          = current_user.name
          = link_to "Sign out", destroy_user_session_path, method: "delete"
    .flash-container
      - [:alert, :notice].each do |type|
        - if flash.key? type
          .flash{class: type}
            = flash[type]
    .content-container
      .content
        = yield
    %footer
